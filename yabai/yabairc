# default layout (can be bsp, stack or float)
yabai -m config layout bsp

# New window spawns to the right if vertical split, or bottom if horizontal split
yabai -m config window_placement second_child

# padding set to 12px
yabai -m config top_padding 52
yabai -m config bottom_padding 12
yabai -m config left_padding 12
yabai -m config right_padding 12
yabai -m config window_gap 12

# center mouse on window with focus
yabai -m config mouse_follows_focus on

# modifier for clicking and dragging with mouse
yabai -m config mouse_modifier alt
# set modifier + left-click drag to move window
yabai -m config mouse_action1 move
# set modifier + right-click drag to resize window
yabai -m config mouse_action2 resize


# when window is dropped in center of another window, swap them (on edges it will split it)
yabai -m mouse_drop_action swap

yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^CleanShot X$" manage=off

# Always open certain apps in certain spaces

yabai -m rule --add app="^Create Booklet 2" space=6
yabai -m rule --add app="^Finder" space=6
yabai -m rule --add app="^Pages" space=5
yabai -m rule --add app="^Affinity Publisher 2" space=5
yabai -m rule --add app="^Preview" space=6
yabai -m rule --add app="^Messenger" space=4
yabai -m rule --add app="^Obsidian" space=3
yabai -m rule --add app="^Google Chrome" space=1
yabai -m rule --add app="^Marked 2" space=6
yabai -m rule --add app="^WezTerm" space=2
yabai -m rule --add app="^HEY" space=4
yabai -m rule --add app="^Proclaim" space=5
yabai -m rule --add app="^TablePlus" space=5
yabai -m rule --add app="^Transmit" space=5
yabai -m rule --add app="^e-Sword X" space=5
yabai -m rule --add app="^Easy CSV Editor" space=5
yabai -m rule --add app="^Invoker" space=5
yabai -m rule --add app="^Firefox" space=1
yabai -m rule --add app="^Safari" space=1
yabai -m rule --add app="^Arc" space=1
yabai -m rule --add app="^Freeform" space=5
yabai -m rule --add app="^Opal" space=4





